auto-reload yes
max-items 50
reload-threads 200

feedlist-format "%4i %n %8u %t %> %?T?%T&-?"
datetime-format "%Y-%m-%d"
articlelist-format "%4i %f %D %?T?;%-17T; ?%t"

bookmark-cmd /home/gb/scripts/nbBookmark
bookmark-autopilot yes

browser "brave %u >/dev/null 2>&1 &"

